<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Common EditText Style -->
    <style name="CustomEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <!-- Other styles as needed -->
    <style name="PrimaryButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="KeypadButtonStyle">
        <!-- Button dimensions -->
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>

        <!-- Background color -->
        <item name="android:background">@drawable/keypad_button_background</item>

        <!-- Text properties -->
        <item name="android:textColor">@color/onPrimary</item> <!-- Black text -->
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>

        <!-- Ripple effect on click (if supported by API level) -->
        <item name="android:foreground">?android:attr/selectableItemBackground</item>

        <!-- Elevation for shadow effect -->
        <item name="android:elevation">4dp</item>
    </style>


</resources>
