<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Common EditText Style -->
    <style name="CustomEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/edittext_border_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>


    <!-- Other styles as needed -->
    <style name="PrimaryButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="SecondaryButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_secondary_background</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>


    <!-- Other styles as needed -->
    <style name="PrimaryPopupButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SecondaryPopupButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_secondary_background</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="KeypadButtonStyle">
        <!-- Button dimensions -->
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>

        <!-- Background color -->
        <item name="android:background">@drawable/keypad_button_background</item>

        <!-- Text properties -->
        <item name="android:textColor">@color/onPrimary</item> <!-- Black text -->
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>

        <!-- Ripple effect on click (if supported by API level) -->
        <item name="android:foreground">?android:attr/selectableItemBackground</item>

        <!-- Elevation for shadow effect -->
        <item name="android:elevation">4dp</item>
    </style>


</resources>
