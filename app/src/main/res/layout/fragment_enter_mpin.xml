<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.app.mygame.usePre.model.MpinViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="?android:attr/windowBackground"
        tools:context=".usePre.fragment.EnterMpinFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_mpin_title"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/mpinEditText1"
                style="@style/CustomEditTextStyle"
                android:inputType="none"
                android:focusable="false"
                android:gravity="center"
                android:maxLength="1"
                android:textSize="18sp"
                android:background="@drawable/mpin_input_background"
                android:layout_margin="8dp"
                android:width="50dp"
                android:height="50dp" />

            <EditText
                android:id="@+id/mpinEditText2"
                style="@style/CustomEditTextStyle"
                android:inputType="none"
                android:focusable="false"
                android:gravity="center"
                android:maxLength="1"
                android:textSize="18sp"
                android:background="@drawable/mpin_input_background"
                android:layout_margin="8dp"
                android:width="50dp"
                android:height="50dp" />

            <EditText
                android:id="@+id/mpinEditText3"
                style="@style/CustomEditTextStyle"
                android:inputType="none"
                android:focusable="false"
                android:gravity="center"
                android:maxLength="1"
                android:textSize="18sp"
                android:background="@drawable/mpin_input_background"
                android:layout_margin="8dp"
                android:width="50dp"
                android:height="50dp" />

            <EditText
                android:id="@+id/mpinEditText4"
                style="@style/CustomEditTextStyle"
                android:inputType="none"
                android:focusable="false"
                android:gravity="center"
                android:maxLength="1"
                android:textSize="18sp"
                android:background="@drawable/mpin_input_background"
                android:layout_margin="8dp"
                android:width="50dp"
                android:height="50dp" />
        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/key_1"
                style="@style/KeypadButtonStyle"
                android:text="1"
                android:layout_margin="12dp" />

            <Button
                android:id="@+id/key_2"
                style="@style/KeypadButtonStyle"
                android:text="2"
                android:layout_margin="12dp" />

            <Button
                android:id="@+id/key_3"
                style="@style/KeypadButtonStyle"
                android:text="3"
                android:layout_margin="12dp" />

            <Button
                android:id="@+id/key_4"
                style="@style/KeypadButtonStyle"
                android:text="4"
                android:layout_margin="12dp" />

            <Button
                android:id="@+id/key_5"
                style="@style/KeypadButtonStyle"
                android:text="5"
                android:layout_margin="12dp" />

            <Button
                android:id="@+id/key_6"
                style="@style/KeypadButtonStyle"
                android:text="6"
                android:layout_margin="12dp" />

            <Button
                android:id="@+id/key_7"
                style="@style/KeypadButtonStyle"
                android:text="7"
                android:layout_margin="12dp" />

            <Button
                android:id="@+id/key_8"
                style="@style/KeypadButtonStyle"
                android:text="8"
                android:layout_margin="12dp" />

            <Button
                android:id="@+id/key_9"
                style="@style/KeypadButtonStyle"
                android:text="9"
                android:layout_margin="12dp" />

            <Button
                android:id="@+id/key_delete"
                style="@style/KeypadButtonStyle"
                android:text="D"
                android:layout_margin="12dp" />

            <Button
                android:id="@+id/key_0"
                style="@style/KeypadButtonStyle"
                android:text="0"
                android:layout_margin="12dp" />
        </GridLayout>
    </LinearLayout>
</layout>
