<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Large Card (Left Side) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/largeCard"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/smallCardsContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Game Date -->
            <TextView
                android:id="@+id/gameDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 Dec 2024"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black" />

            <!-- Game Time -->
            <TextView
                android:id="@+id/gameTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:00 PM"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <!-- Game Title -->
            <TextView
                android:id="@+id/gameTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PUBG Mobile Championship"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Small Cards Container (Right Side) -->
    <LinearLayout
        android:id="@+id/smallCardsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/largeCard"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="8dp">

        <!-- Small Card 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/smallCard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Next Game Date -->
                <TextView
                    android:id="@+id/nextGameDate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 Dec 2024"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <!-- Next Game Time -->
                <TextView
                    android:id="@+id/nextGameTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6:00 PM"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="4dp" />

                <!-- Next Game Title -->
                <TextView
                    android:id="@+id/nextGameTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CS:GO Championship"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Small Card 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/smallCard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Next Game Date -->
                <TextView
                    android:id="@+id/nextGameDate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26 Dec 2024"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <!-- Next Game Time -->
                <TextView
                    android:id="@+id/nextGameTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00 PM"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="4dp" />

                <!-- Next Game Title -->
                <TextView
                    android:id="@+id/nextGameTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valorant Showdown"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
