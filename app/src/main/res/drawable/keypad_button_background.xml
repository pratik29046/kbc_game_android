<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0E0E0" /> <!-- Light gray background when pressed -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#D3D3D3" /> <!-- Light gray border -->
        </shape>
    </item>
</selector>
